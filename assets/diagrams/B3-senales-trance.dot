digraph SenalesTrance {
    // Layout hexagonal
    layout=neato;
    bgcolor="#0a1628";
    pad=0.5;
    splines=curved;

    // Estilo global - paleta portada
    node [
        shape=box,
        style="rounded,filled",
        fontname="Helvetica Neue",
        fontsize=10,
        fontcolor="#ffffff",
        penwidth=2
    ];

    edge [
        penwidth=1.5,
        color="#8899aa",
        style=dashed,
        arrowhead=none
    ];

    // Titulo central
    centro [label="CODING\nTRANCE\n\n≥3 señales\n= diagnóstico",
            shape=hexagon,
            fillcolor="#8b0000",
            color="#dc143c",
            fontcolor="white",
            fontsize=11,
            width=2.2,
            height=2.2,
            pos="0,0!"];

    // 6 señales en circulo
    S1 [label="Conversacion\nTECNICA cuando\ndeberia ser\nESTRATEGICA",
        fillcolor="#1e3a5f", color="#3d7ab7", width=2, height=1, pos="0,3.2!"];

    S2 [label="Excepciones\ntratadas como\nERRORES\na eliminar",
        fillcolor="#2d5a87", color="#3d7ab7", width=2, height=1, pos="2.8,1.6!"];

    S3 [label="Memoria\ninstitucional\nEXTERNALIZADA\nal sistema",
        fillcolor="#1e3a5f", color="#3d7ab7", width=2, height=1, pos="2.8,-1.6!"];

    S4 [label="Friccion humana\npercibida como\nINEFICIENCIA",
        fillcolor="#2d5a87", color="#3d7ab7", width=2, height=1, pos="0,-3.2!"];

    S5 [label="Exito medido\nSOLO en terminos\ncuantificables",
        fillcolor="#1e3a5f", color="#3d7ab7", width=2, height=1, pos="-2.8,-1.6!"];

    S6 [label="Sorpresas\nsiempre NEGATIVAS\ny TARDIAS",
        fillcolor="#2d5a87", color="#3d7ab7", width=2, height=1, pos="-2.8,1.6!"];

    // Conexiones al centro
    S1 -> centro;
    S2 -> centro;
    S3 -> centro;
    S4 -> centro;
    S5 -> centro;
    S6 -> centro;
}
