digraph LeyVariedadAshby {
    // Layout
    layout=neato;
    bgcolor="transparent";
    pad=0.5;
    splines=curved;

    // Estilo global - paleta portada
    node [
        shape=box,
        style="rounded,filled",
        fontname="Helvetica Neue",
        fontsize=10,
        fontcolor="#ffffff",
        penwidth=2
    ];

    edge [
        penwidth=2,
        color="#3d7ab7",
        fontcolor="#8899aa",
        arrowsize=0.7
    ];

    // Titulo
    title [label="LEY DE VARIEDAD REQUERIDA\n(Ashby, 1956)", shape=plaintext, fontsize=14, fontname="Helvetica Neue Bold", fontcolor="#ffffff", pos="0,4.5!"];

    // Lado izquierdo - Variedad Externa (rojo - caos)
    ext [label="VARIEDAD\nEXTERNA", fillcolor="#8b0000", color="#dc143c", width=1.8, height=0.7, pos="-3,2.5!"];
    e1 [label="Mercados\nmutantes", fillcolor="#5c0000", color="#dc143c", width=1.5, height=0.6, pos="-4,1!"];
    e2 [label="Tecnologias\nemergentes", fillcolor="#5c0000", color="#dc143c", width=1.5, height=0.6, pos="-3,0!"];
    e3 [label="Competidores\nimpredecibles", fillcolor="#5c0000", color="#dc143c", width=1.5, height=0.6, pos="-4,-1!"];
    e4 [label="Regulaciones\ncambiantes", fillcolor="#5c0000", color="#dc143c", width=1.5, height=0.6, pos="-3,-2!"];

    // Lado derecho - Variedad Interna (azul - control)
    int [label="VARIEDAD\nINTERNA", fillcolor="#1e3a5f", color="#3d7ab7", width=1.8, height=0.7, pos="3,2.5!"];
    i1 [label="Procesos\nestandarizados", fillcolor="#2d5a87", color="#3d7ab7", width=1.5, height=0.6, pos="3,1!"];
    i2 [label="Respuestas\npredefinidas", fillcolor="#2d5a87", color="#3d7ab7", width=1.5, height=0.6, pos="4,0!"];
    i3 [label="Control\ncentralizado", fillcolor="#2d5a87", color="#3d7ab7", width=1.5, height=0.6, pos="3,-1!"];

    // Centro - Brecha
    brecha [label="BRECHA\n\nDonde se acumula\nla fragilidad", fillcolor="#0d1f3c", color="#8899aa", width=2.2, height=1.2, pos="0,0!"];

    // Conexiones
    ext -> brecha [label="  infinita  ", fontsize=8, fontcolor="#dc143c", color="#dc143c"];
    brecha -> int [label="  finita  ", fontsize=8, fontcolor="#3d7ab7", color="#3d7ab7"];

    // Ley
    ley [label="Si variedad interna < variedad externa\nel sistema no puede adaptarse", shape=plaintext, fontsize=9, fontcolor="#8899aa", pos="0,-3!"];
}
