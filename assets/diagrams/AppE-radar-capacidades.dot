digraph RadarCapacidades {
    // Configuración general - paleta portada
    graph [
        bgcolor="#0a1628"
        fontname="Helvetica Neue"
        fontsize=11
        fontcolor="#ffffff"
        pad=0.5
        nodesep=0.4
        ranksep=0.6
    ];
    node [fontname="Helvetica Neue" fontsize=10 fontcolor="#ffffff"];
    edge [fontname="Helvetica Neue" fontsize=9 fontcolor="#8899aa"];

    // Nodo central invisible para anclar
    center [label="" shape=point width=0.1 style=invis];

    // === ZONA FUNCIONAL (anillo exterior - azul control) ===
    subgraph cluster_funcional {
        label="ZONA FUNCIONAL\n(Nivel > 3)"
        labelloc="b"
        style="rounded,filled"
        fillcolor="#1e3a5f"
        color="#3d7ab7"
        penwidth=2
        fontcolor="#ffffff"
        fontsize=11

        // Capacidades en zona funcional
        F1 [label="CAP-1\nDetección\nloops\n━━━━ 4" shape=box style="rounded,filled" fillcolor="#2d5a87" color="#3d7ab7" fontsize=9 fontcolor="#ffffff"]
        F2 [label="CAP-4\nCriterio\ncodificado\n━━━━ 4" shape=box style="rounded,filled" fillcolor="#2d5a87" color="#3d7ab7" fontsize=9 fontcolor="#ffffff"]
    }

    // === ZONA DESARROLLO (anillo medio - gris) ===
    subgraph cluster_desarrollo {
        label="ZONA DESARROLLO\n(Nivel 2-3)"
        labelloc="b"
        style="rounded,filled"
        fillcolor="#0d1f3c"
        color="#8899aa"
        penwidth=2
        fontcolor="#8899aa"
        fontsize=11

        D1 [label="CAP-2\nLímite\nDRG\n━━━░ 3" shape=box style="rounded,filled" fillcolor="#1e3a5f" color="#8899aa" fontsize=9 fontcolor="#ffffff"]
        D2 [label="CAP-3\nAprendizaje\ngrupal\n━━░░ 2" shape=box style="rounded,filled" fillcolor="#1e3a5f" color="#8899aa" fontsize=9 fontcolor="#ffffff"]
        D3 [label="CAP-5\nAbsorción\nfricción\n━━━░ 3" shape=box style="rounded,filled" fillcolor="#1e3a5f" color="#8899aa" fontsize=9 fontcolor="#ffffff"]
        D4 [label="CAP-8\nDiferenciación\ndominio\n━━░░ 2" shape=box style="rounded,filled" fillcolor="#1e3a5f" color="#8899aa" fontsize=9 fontcolor="#ffffff"]
    }

    // === ZONA CRÍTICA (anillo interior - rojo caos) ===
    subgraph cluster_critica {
        label="ZONA CRÍTICA\n(Nivel < 2)"
        labelloc="b"
        style="rounded,filled"
        fillcolor="#8b0000"
        color="#dc143c"
        penwidth=2
        fontcolor="#dc143c"
        fontsize=11

        C1 [label="CAP-6\nOverride\nexplícito\n━░░░ 1" shape=box style="rounded,filled" fillcolor="#5c0000" color="#dc143c" fontsize=9 fontcolor="#ffffff"]
        C2 [label="CAP-7\nGobernanza\nIA\n░░░░ 0" shape=box style="rounded,filled" fillcolor="#5c0000" color="#dc143c" fontsize=9 fontcolor="#ffffff"]
    }

    // === LEYENDA ===
    subgraph cluster_leyenda {
        label="ESCALA DE MADUREZ"
        labelloc="t"
        style="rounded,filled"
        fillcolor="#0d1f3c"
        color="#2d5a87"
        fontcolor="#ffffff"
        fontsize=10

        leyenda [
            label=<
            <TABLE BORDER="0" CELLBORDER="0" CELLSPACING="2" BGCOLOR="#0d1f3c">
                <TR><TD ALIGN="LEFT"><FONT POINT-SIZE="9" COLOR="#8899aa">░░░░ = 0 Inexistente</FONT></TD></TR>
                <TR><TD ALIGN="LEFT"><FONT POINT-SIZE="9" COLOR="#8899aa">━░░░ = 1 Ad-hoc</FONT></TD></TR>
                <TR><TD ALIGN="LEFT"><FONT POINT-SIZE="9" COLOR="#8899aa">━━░░ = 2 Definido</FONT></TD></TR>
                <TR><TD ALIGN="LEFT"><FONT POINT-SIZE="9" COLOR="#8899aa">━━━░ = 3 Gestionado</FONT></TD></TR>
                <TR><TD ALIGN="LEFT"><FONT POINT-SIZE="9" COLOR="#8899aa">━━━━ = 4 Optimizado</FONT></TD></TR>
            </TABLE>
            >
            shape=none
        ]
    }

    // Conexiones invisibles para layout
    center -> C1 [style=invis]
    center -> C2 [style=invis]
    C1 -> D1 [style=invis]
    C2 -> D2 [style=invis]
    D1 -> F1 [style=invis]
    D3 -> F2 [style=invis]
}
