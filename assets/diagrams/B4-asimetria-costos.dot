digraph AsimetriaBalanza {
    // Layout
    layout=neato;
    bgcolor="white";
    pad=0.8;

    // Estilo global
    node [
        fontname="Arial",
        fontsize=11,
        penwidth=2
    ];

    edge [
        penwidth=3,
        color="#555555"
    ];

    // Titulo
    titulo [label="ASIMETRIA DE COSTOS\nEN DECISIONES DE LIMITE",
            shape=plaintext,
            fontsize=14,
            fontname="Arial Bold",
            pos="0,5!"];

    // Fulcro (punto de apoyo) - desplazado a la derecha para mostrar desequilibrio
    fulcro [label="",
            shape=triangle,
            width=0.8,
            height=0.6,
            fillcolor="#616161",
            style=filled,
            pos="1,0!"];

    // Barra de la balanza - inclinada (DETENER pesa más = baja)
    // Lado DETENER (izquierda, más abajo porque pesa más)
    plato_detener [label="",
                   shape=circle,
                   width=0.3,
                   fillcolor="#c62828",
                   style=filled,
                   pos="-3.5,-1.5!"];

    // Lado CONTINUAR (derecha, más arriba porque pesa menos)
    plato_continuar [label="",
                     shape=circle,
                     width=0.3,
                     fillcolor="#2e7d32",
                     style=filled,
                     pos="5.5,0.5!"];

    // Barra inclinada (línea)
    barra1 [label="", shape=point, width=0, pos="-3.5,-1.5!"];
    barra2 [label="", shape=point, width=0, pos="5.5,0.5!"];

    // Etiquetas de los lados
    label_detener [label="DETENER",
                   shape=plaintext,
                   fontsize=13,
                   fontname="Arial Bold",
                   fontcolor="#c62828",
                   pos="-3.5,-2.3!"];

    label_continuar [label="CONTINUAR",
                     shape=plaintext,
                     fontsize=13,
                     fontname="Arial Bold",
                     fontcolor="#2e7d32",
                     pos="5.5,-0.3!"];

    // Pesos lado DETENER (cajas rojas apiladas - pesadas)
    d1 [label="Costo\nCONCENTRADO\nen quien detiene",
        shape=box,
        style="rounded,filled",
        fillcolor="#ffcdd2",
        color="#c62828",
        width=2.2,
        height=0.9,
        pos="-3.5,-4!"];

    d2 [label="Costo\nINMEDIATO\nvisible para todos",
        shape=box,
        style="rounded,filled",
        fillcolor="#ffcdd2",
        color="#c62828",
        width=2.2,
        height=0.9,
        pos="-3.5,-5.2!"];

    d3 [label="Beneficio\nINCIERTO\nen futuro lejano",
        shape=box,
        style="rounded,filled",
        fillcolor="#ffcdd2",
        color="#c62828",
        width=2.2,
        height=0.9,
        pos="-3.5,-6.4!"];

    // Pesos lado CONTINUAR (cajas verdes - livianas)
    c1 [label="Costo\nDISTRIBUIDO\nentre todos",
        shape=box,
        style="rounded,filled",
        fillcolor="#c8e6c9",
        color="#2e7d32",
        width=2.2,
        height=0.9,
        pos="5.5,-1.8!"];

    c2 [label="Costo\nDIFERIDO\na futuro incierto",
        shape=box,
        style="rounded,filled",
        fillcolor="#c8e6c9",
        color="#2e7d32",
        width=2.2,
        height=0.9,
        pos="5.5,-3!"];

    c3 [label="Beneficio\nINMEDIATO\nevitar conflicto",
        shape=box,
        style="rounded,filled",
        fillcolor="#c8e6c9",
        color="#2e7d32",
        width=2.2,
        height=0.9,
        pos="5.5,-4.2!"];

    // Conexiones de la balanza
    plato_detener -> fulcro [arrowhead=none, color="#888888", penwidth=4];
    fulcro -> plato_continuar [arrowhead=none, color="#888888", penwidth=4];

    // Lineas a los pesos
    plato_detener -> d1 [arrowhead=none, style=dashed, color="#c62828"];
    plato_continuar -> c1 [arrowhead=none, style=dashed, color="#2e7d32"];

    // Conclusion
    conclusion [label="La balanza siempre se inclina hacia CONTINUAR\nNo por defecto de caracter, sino por estructura de incentivos",
                shape=box,
                style="rounded,filled",
                fillcolor="#fff3e0",
                color="#e65100",
                fontsize=10,
                width=5,
                height=0.7,
                pos="1,-8!"];
}
